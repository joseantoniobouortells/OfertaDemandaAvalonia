<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:controls="using:OfertaDemanda.Desktop.Controls"
             x:CompileBindings="False"
             mc:Ignorable="d"
             x:Class="OfertaDemanda.Desktop.Views.ElasticityView">
  <UserControl.Styles>
    <Style Selector="ToggleButton.segmented">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="10,4" />
      <Setter Property="Foreground" Value="#CFCFCF" />
    </Style>
    <Style Selector="ToggleButton.segmented:checked">
      <Setter Property="Background" Value="#3A3A3A" />
      <Setter Property="Foreground" Value="White" />
    </Style>
  </UserControl.Styles>
  <Grid ColumnDefinitions="340,*"
        ColumnSpacing="16">
    <ScrollViewer Grid.Column="0"
                  VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="12">
        <TextBlock Text="{Binding Localization[Elasticity_UsesMarketDemand]}"
                   FontWeight="Bold" />
        <TextBlock Text="{Binding Localization[Elasticity_Demand_Label]}" />
        <TextBox Text="{Binding Market.DemandExpression, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{Binding MarketShockText}"
                   FontSize="12" />

        <TextBlock Text="{Binding Localization[Elasticity_Supply_Label]}"
                   Margin="0,8,0,0" />
        <TextBox Text="{Binding SupplyExpression, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="{Binding Localization[Elasticity_Price_Label]}"
                   Margin="0,12,0,0" />
        <Slider Minimum="10"
                Maximum="110"
                Value="{Binding Price}" />
        <TextBlock Text="{Binding PriceText}"
                   FontSize="12" />

        <TextBlock Text="{Binding ElasticityText}"
                   Margin="0,12,0,0" />
        <StackPanel Margin="0,8,0,0"
                    Spacing="4">
          <controls:MathBlock Latex="{Binding Localization[Elasticity_Formula_Elasticity]}"
                              FontSize="14" />
          <controls:MathBlock Latex="{Binding Localization[Elasticity_Formula_MarginalRevenue]}"
                              FontSize="14" />
          <TextBlock Text="{Binding MarginalRevenueText}"
                     FontSize="12"
                     Opacity="0.75" />
          <TextBlock Text="{Binding MarginalRevenueInterpretationText}"
                     FontSize="12"
                     Opacity="0.75" />
        </StackPanel>

        <Border Margin="0,12,0,0"
                Padding="8"
                Background="#3FFFF0F0"
                CornerRadius="4"
                IsVisible="{Binding HasErrors}">
          <StackPanel>
            <TextBlock Text="{Binding Localization[Common_Errors]}"
                       FontWeight="Bold" />
            <ItemsControl ItemsSource="{Binding Errors}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="â€¢ {Binding}" />
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>
      </StackPanel>
    </ScrollViewer>

    <Grid Grid.Column="1"
          RowDefinitions="Auto,*,220"
          RowSpacing="12">
      <Border Grid.Row="0"
              BorderBrush="#3A3A3A"
              BorderThickness="1"
              Background="#1E1E1E"
              CornerRadius="16"
              Padding="2"
              HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal"
                    Spacing="2">
          <ToggleButton Classes="segmented"
                        IsChecked="{Binding IsQuantityMode}"
                        Content="{Binding Localization[Elasticity_Mode_Quantity]}" />
          <ToggleButton Classes="segmented"
                        IsChecked="{Binding IsPriceMode}"
                        Content="{Binding Localization[Elasticity_Mode_Price]}" />
        </StackPanel>
      </Border>
      <lvc:CartesianChart Grid.Row="1"
                          Series="{Binding Series}"
                          XAxes="{Binding XAxes}"
                          YAxes="{Binding YAxes}"
                          LegendPosition="Right"
                          AnimationsSpeed="0:0:0" />
      <StackPanel Grid.Row="2"
                  Spacing="6">
        <TextBlock Text="{Binding Localization[Elasticity_Subtitle_ElasticityCurve]}"
                   FontWeight="SemiBold" />
        <lvc:CartesianChart Series="{Binding ElasticityCurveSeries}"
                            XAxes="{Binding ElasticityXAxes}"
                            YAxes="{Binding ElasticityYAxes}"
                            LegendPosition="Right"
                            AnimationsSpeed="0:0:0" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
