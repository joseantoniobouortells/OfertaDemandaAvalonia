<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:controls="using:OfertaDemanda.Desktop.Controls"
             x:CompileBindings="False"
             mc:Ignorable="d"
             x:Class="OfertaDemanda.Desktop.Views.MarketView">
  <Grid ColumnDefinitions="340,*"
        ColumnSpacing="16">
    <ScrollViewer Grid.Column="0"
                  VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="12">
        <Border Classes="glass-panel">
          <StackPanel Spacing="10">
            <TextBlock Text="{Binding Localization[Market_Functions]}"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding Localization[Market_DemandInverse]}" />
            <TextBox Text="{Binding DemandExpression, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding Localization[Market_SupplyInverse]}"
                       Margin="0,6,0,0" />
            <TextBox Text="{Binding SupplyExpression, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="10">
            <TextBlock Text="{Binding Localization[Market_ShocksTax]}"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding Localization[Market_DemandShock]}" />
            <Slider Minimum="-30"
                    Maximum="30"
                    Value="{Binding DemandShock}"
                    TickFrequency="5" />
            <TextBlock Text="{Binding DemandShockText}"
                       FontSize="12" />

            <TextBlock Text="{Binding Localization[Market_SupplyShock]}"
                       Margin="0,6,0,0" />
            <Slider Minimum="-30"
                    Maximum="30"
                    Value="{Binding SupplyShock}"
                    TickFrequency="5" />
            <TextBlock Text="{Binding SupplyShockText}"
                       FontSize="12" />

            <TextBlock Text="{Binding Localization[Market_Tax]}"
                       Margin="0,6,0,0" />
            <Slider Minimum="0"
                    Maximum="30"
                    Value="{Binding Tax}"
                    TickFrequency="5" />
            <TextBlock Text="{Binding TaxText}"
                       FontSize="12" />
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="10">
            <Grid ColumnDefinitions="*,Auto"
                  VerticalAlignment="Center">
              <TextBlock Text="{Binding Localization[Market_Costs]}"
                         FontWeight="SemiBold" />
              <controls:MathBlock Grid.Column="1"
                                  Latex="{Binding TotalCostFormulaLatex}"
                                  FontSize="14"
                                  Inline="True"
                                  MaxWidth="160"
                                  HorizontalAlignment="Right"
                                  Margin="8,0,0,0" />
            </Grid>
            <TextBlock Text="{Binding Localization[Market_CostType]}" />
            <ComboBox ItemsSource="{Binding CostTypeOptions}"
                      SelectedItem="{Binding SelectedCostType}">
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Label}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="{Binding Localization[Market_CostFixed]}"
                       Margin="0,6,0,0" />
            <TextBox Text="{Binding FixedCost, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding Localization[Market_CostLinear]}"
                       Margin="0,6,0,0" />
            <TextBox Text="{Binding LinearCost, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding Localization[Market_CostQuadratic]}"
                       Margin="0,6,0,0" />
            <TextBox Text="{Binding QuadraticCost, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel IsVisible="{Binding ShowAdvanced}"
                        Spacing="6">
              <StackPanel IsVisible="{Binding IsCubicCostVisible}">
                <TextBlock Text="{Binding Localization[Market_CostCubic]}"
                           Margin="0,6,0,0" />
                <TextBox Text="{Binding CubicCost, UpdateSourceTrigger=PropertyChanged}" />
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="10">
            <TextBlock Text="{Binding Localization[Market_CurvesElements]}"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding Localization[Market_Preset_Label]}"
                       FontSize="12"
                       Opacity="0.7" />
            <ListBox ItemsSource="{Binding PresetOptions}"
                     SelectedItem="{Binding SelectedPreset}"
                     Classes="chip-list">
              <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Orientation="Horizontal"
                              Spacing="6" />
                </ItemsPanelTemplate>
              </ListBox.ItemsPanel>
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Label}" />
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
            <CheckBox Content="{Binding Localization[Market_AdvancedToggle]}"
                      IsChecked="{Binding ShowAdvanced}" />
            <StackPanel IsVisible="{Binding ShowAdvanced}">
              <Expander Header="{Binding Localization[Market_Customize_Toggles]}"
                        Margin="0,8,0,0">
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal"
                              Spacing="8">
                    <Button Content="{Binding Localization[Market_ShowAll]}"
                            Command="{Binding ShowAllTogglesCommand}" />
                    <Button Content="{Binding Localization[Market_HideAll]}"
                            Command="{Binding HideAllTogglesCommand}" />
                  </StackPanel>
                  <ItemsControl ItemsSource="{Binding ToggleGroups}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <StackPanel Margin="0,8,0,0">
                          <StackPanel Orientation="Horizontal"
                                      Spacing="8">
                            <TextBlock Text="{Binding Label}"
                                       FontWeight="SemiBold" />
                            <Button Content="{Binding DataContext.Localization[Market_ShowGroup], RelativeSource={RelativeSource AncestorType=Expander}}"
                                    Command="{Binding DataContext.ShowGroupCommand, RelativeSource={RelativeSource AncestorType=Expander}}"
                                    CommandParameter="{Binding}" />
                          </StackPanel>
                          <ItemsControl ItemsSource="{Binding Items}"
                                        Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                <CheckBox Content="{Binding Label}"
                                          IsChecked="{Binding IsVisible}" />
                              </DataTemplate>
                            </ItemsControl.ItemTemplate>
                          </ItemsControl>
                        </StackPanel>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </StackPanel>
              </Expander>
            </StackPanel>
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="8">
            <TextBlock Text="{Binding Localization[Market_EquilibriumResults]}"
                       FontWeight="SemiBold" />
            <WrapPanel>
              <TextBlock Text="{Binding EquilibriumText}" />
              <TextBlock Text="{Binding PriceConsumerText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding PriceProducerText}" Margin="8,0,0,0" />
            </WrapPanel>
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="8">
            <TextBlock Text="{Binding Localization[Market_FirmCompetitive]}"
                       FontWeight="SemiBold" />
            <WrapPanel>
              <TextBlock Text="{Binding FirmQuantityText}" />
              <TextBlock Text="{Binding FirmMarginalCostText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding FirmAverageVariableCostText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding FirmAverageCostText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding FirmProfitText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding FirmStateText}" Margin="8,0,0,0" />
            </WrapPanel>
          </StackPanel>
        </Border>

        <Border Classes="glass-panel">
          <StackPanel Spacing="8">
            <TextBlock Text="{Binding Localization[Market_WelfareResults]}"
                       FontWeight="SemiBold" />
            <WrapPanel>
              <TextBlock Text="{Binding ConsumerSurplusText}" />
              <TextBlock Text="{Binding ProducerSurplusText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding TaxRevenueText}" Margin="8,0,0,0" />
              <TextBlock Text="{Binding DeadweightLossText}" Margin="8,0,0,0" />
            </WrapPanel>

            <Expander Header="{Binding Localization[Market_Explanation_Title]}"
                      IsExpanded="False">
              <Border Margin="0,8,0,0"
                      Padding="10"
                      CornerRadius="6"
                      Background="{DynamicResource ThemeControlLowBrush}">
                <StackPanel>
                  <StackPanel Margin="0,4,0,0">
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_MC_Title]}"
                                        FontSize="16" />
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_MC_Formula]}"
                                        Margin="0,6,0,0"
                                        FontSize="15" />
                    <TextBlock Text="{Binding Localization[Market_Explanation_MC_Body]}"
                               FontSize="12"
                               Opacity="0.75" />
                  </StackPanel>
                  <StackPanel Margin="0,6,0,0">
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_AVC_Title]}"
                                        FontSize="16" />
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_AVC_Formula]}"
                                        Margin="0,6,0,0"
                                        FontSize="15" />
                    <TextBlock Text="{Binding Localization[Market_Explanation_AVC_Body]}"
                               FontSize="12"
                               Opacity="0.75" />
                  </StackPanel>
                  <StackPanel Margin="0,6,0,0">
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_AC_Title]}"
                                        FontSize="16" />
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_AC_Formula]}"
                                        Margin="0,6,0,0"
                                        FontSize="15" />
                    <TextBlock Text="{Binding Localization[Market_Explanation_AC_Body]}"
                               FontSize="12"
                               Opacity="0.75" />
                  </StackPanel>
                  <StackPanel Margin="0,6,0,0">
                    <controls:MathBlock Latex="{Binding Localization[Market_Explanation_Profit_Title]}"
                                        FontSize="16" />
                    <TextBlock Text="{Binding Localization[Market_Explanation_Profit_Body]}"
                               FontSize="12"
                               Opacity="0.75" />
                  </StackPanel>
                </StackPanel>
              </Border>
            </Expander>
          </StackPanel>
        </Border>

        <Border Margin="0,12,0,0"
                Padding="8"
                Background="#3FFFF0F0"
                CornerRadius="4"
                IsVisible="{Binding HasErrors}">
          <StackPanel>
            <TextBlock Text="{Binding Localization[Common_Errors]}"
                       FontWeight="Bold" />
            <ItemsControl ItemsSource="{Binding Errors}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="â€¢ {Binding}" />
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>
      </StackPanel>
    </ScrollViewer>

    <lvc:CartesianChart Grid.Column="1"
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}"
                        LegendPosition="Right"
                        AnimationsSpeed="0:0:0" />
  </Grid>
</UserControl>
