<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfertaDemanda.Mobile.Views.SettingsPage"
             x:Name="Root">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="14">
      <Label Text="{Binding Localization[Settings_Title]}" FontSize="22" FontAttributes="Bold" />
      <Label Text="{Binding Localization[Settings_Subtitle]}" Opacity="0.8" />

      <Label Text="{Binding Localization[Settings_Theme_Title]}" FontAttributes="Bold" Margin="0,10,0,0" />
      <Label Text="{Binding Localization[Settings_Theme_Hint]}" FontSize="12" Opacity="0.7" />
      <Picker ItemsSource="{Binding ThemeOptions}"
              SelectedItem="{Binding SelectedTheme}"
              ItemDisplayBinding="{Binding Label}" />

      <Label Text="{Binding Localization[Settings_Language_Title]}" FontAttributes="Bold" Margin="0,10,0,0" />
      <Label Text="{Binding Localization[Settings_Language_Hint]}" FontSize="12" Opacity="0.7" />
      <Picker ItemsSource="{Binding LanguageOptions}"
              SelectedItem="{Binding SelectedLanguage}"
              ItemDisplayBinding="{Binding Label}" />

      <Label Text="{Binding Localization[Settings_Config_Title]}" FontAttributes="Bold" Margin="0,10,0,0" />
      <Label Text="{Binding Localization[Settings_Config_Hint]}" FontSize="12" Opacity="0.7" />
      <Label Text="{Binding SettingsFilePath}" FontSize="12" />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
