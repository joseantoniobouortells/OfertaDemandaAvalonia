<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OfertaDemanda.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OfertaDemanda.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="{Binding Localization[Tab_PerfectCompetition]}"
                      ContentTemplate="{DataTemplate views:PerfectCompetitionPage}" />
        <ShellContent Title="{Binding Localization[Tab_Monopoly]}"
                      ContentTemplate="{DataTemplate views:MonopolyPage}" />
        <ShellContent Title="{Binding Localization[Tab_Settings]}"
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent Title="{Binding Localization[Tab_About]}"
                      ContentTemplate="{DataTemplate views:AboutPage}" />
    </TabBar>
</Shell>
