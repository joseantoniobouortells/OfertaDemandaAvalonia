ARG DOTNET_VERSION=8.0
FROM mcr.microsoft.com/dotnet/sdk:${DOTNET_VERSION}

WORKDIR /repo

RUN apt-get update \
    && apt-get install -y --no-install-recommends dpkg imagemagick \
    && rm -rf /var/lib/apt/lists/*

COPY . /repo

RUN ./scripts/create-linux-deb.sh \
    && mkdir -p /out \
    && cp -R /repo/artifacts/linux/deb /out/deb
